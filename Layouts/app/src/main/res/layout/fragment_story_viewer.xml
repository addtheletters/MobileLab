<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.atl.layouts.StoryViewerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_last_page"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />

        <Button
            android:id="@+id/btn_next_page"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/btn_last_page"
            />

        <TextView android:id="@+id/text_story_viewer" android:layout_width="match_parent" android:layout_height="fill_parent"
            android:text="@string/hello_blank_fragment" android:scrollbars="vertical" android:layout_below="@id/btn_last_page"/>


    </RelativeLayout>

</FrameLayout>
